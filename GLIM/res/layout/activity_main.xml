<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="@color/black"
    android:padding="40dp"
    tools:context=".MainActivity" >

    <edu.gatech.ubicomp.glim.EDAWaveformView
        android:id="@+id/waveformView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="@dimen/footer_right_margin"
        android:layout_marginBottom="@dimen/footer_bottom_margin"
        android:textSize="@dimen/footer_text_size" />
<!--     <TextView
        android:id="@+id/phrase_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginBottom="29px"
        android:text="@string/annotation_action" /> -->

        <TextView
        android:id="@+id/labelHeartRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="@string/labelHeartRate"
        android:visibility="gone" />
            <TextView
        android:id="@+id/InstantSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="000"
        android:textSize="20sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="top" 
        android:orientation="horizontal">

        
        <!-- Heart Icon: Jardson AraÃºjo, from The Noun Project -->

<!--         <ImageView
            android:id="@+id/heartBeatImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:src="@drawable/heart" /> -->

        <TextView
            android:id="@+id/HRTextBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:textSize="20sp" 
            android:visibility="gone" />
        
        <LinearLayout
            android:layout_width="160dp"
        android:layout_height="20dp"
        android:layout_gravity="left"
        android:background="@color/green"/>

        <LinearLayout
            android:layout_width="180dp"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/yellow"/>
        <LinearLayout
            android:layout_width="220dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:background="@color/red"/>
        
        

    </LinearLayout>
    
        <TextView
        android:id="@+id/StatusTextBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:text=""
        android:textSize="20sp" />
    
</FrameLayout>
